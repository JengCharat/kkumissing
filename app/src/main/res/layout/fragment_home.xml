<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Spinner
        android:id="@+id/TypeSearch"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/edittext_mini_bg"
        app:layout_constraintEnd_toStartOf="@+id/butSearch"
        app:layout_constraintTop_toBottomOf="@+id/searchText" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/logo_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchText"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_mini_bg"
        android:ems="10"
        android:fontFamily="@font/prompt_medium"
        android:hint="ชื่อ"
        android:inputType="text"
        android:padding="14dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butSearch"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_mini_bg"
        android:fontFamily="@font/prompt_medium"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchText" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TypeSearch">

        <Button
            android:id="@+id/button3"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_mini_bg"
            android:backgroundTint="#C2410C"
            android:fontFamily="@font/prompt_medium"
            android:text="ของที่แจ้งหาย" />

        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edittext_mini_bg"
            android:backgroundTint="#DC5F00"
            android:fontFamily="@font/prompt_medium"
            android:text="ของที่แจ้งหาย" />  <!-- เพิ่ม marginStart -->/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item1"
        android:layout_width="352dp"
        android:layout_height="561dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>