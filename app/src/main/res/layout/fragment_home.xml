<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.home.HomeFragment">

    <Spinner
        android:id="@+id/TypeSearch"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/edittext_mini_bg"
        app:layout_constraintEnd_toStartOf="@+id/butSearch"
        app:layout_constraintTop_toBottomOf="@+id/inputFname" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/logo_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputFname"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_mini_bg"
        android:ems="10"
        android:fontFamily="@font/prompt_medium"
        android:hint="ชื่อ"
        android:inputType="text"
        android:padding="14dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butSearch"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_mini_bg"
        android:fontFamily="@font/prompt_medium"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputFname" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TypeSearch">

        <Button
            android:id="@+id/button3"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/edittext_mini_bg"
            android:backgroundTint="#C2410C"
            android:fontFamily="@font/prompt_medium"
            android:text="ของที่แจ้งหาย" />

        <Button
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/edittext_mini_bg"
            android:backgroundTint="#DC5F00"
            android:fontFamily="@font/prompt_medium"
            android:text="ของที่แจ้งหาย" />  <!-- เพิ่ม marginStart -->
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="409dp"
        android:layout_height="597dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="380dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="251dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:fontFamily="@font/prompt_semibold"
            android:text="ของที่แจ้งหาย"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ItemMapBtn"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_green_mini"
            android:text="Map"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="@null" />
    </LinearLayout>

    <ImageView
        android:id="@+id/MAP"
        android:layout_width="359dp"
        android:layout_height="581dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

</androidx.constraintlayout.widget.ConstraintLayout>