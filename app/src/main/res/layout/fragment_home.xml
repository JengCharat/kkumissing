<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_img23"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="364dp"
        android:src="@drawable/waterdrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="188dp"
        android:src="@drawable/waterdrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/search_bg"
        android:layout_width="378dp"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:elevation="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/home_bg"
        app:shapeAppearanceOverlay="@style/CircleImageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/greeting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/prompt_medium"
        android:gravity="center_vertical"
        android:text="สวัสดี, ผู้ใช้!"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search_text"
        android:layout_width="354dp"
        android:layout_height="61dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/edittext_bg"
        android:elevation="2dp"
        android:ems="10"
        android:fontFamily="@font/prompt_medium"
        android:hint="ค้นหา..."
        android:inputType="text"
        android:paddingStart="56dp"
        android:paddingEnd="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/get_button"
        android:layout_width="32dp"
        android:layout_height="35dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="48dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/icons_search_back"
        android:elevation="4dp"
        android:padding="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/misingType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginTop="12dp"
        android:background="@drawable/icon_filter_back"
        android:elevation="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_text" />

    <Button
        android:id="@+id/founding_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_bg"
        android:backgroundTint="@color/teal_700"
        android:fontFamily="@font/prompt_medium"
        android:text="ของที่ถูกพบ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/reporting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:background="@drawable/edittext_bg"
        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/prompt_medium"
        android:text="ของที่ถูกพบ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_list"
        android:layout_width="400dp"
        android:layout_height="536dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/founding_button" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="106dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/prompt_medium"
        android:text="รายการของ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>