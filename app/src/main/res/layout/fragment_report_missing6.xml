<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reportMissing.ReportMissing1Fragment">

    <Button
        android:id="@+id/butNextTo7"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="256dp"
        android:fontFamily="@font/prompt_medium"
        android:text="แจ้งสูญหาย"
        android:textColorLink="#C2410C"
        app:cornerRadius="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/butbackTo5"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="256dp"
        android:fontFamily="@font/prompt_medium"
        android:text="ถอยกลับ"
        android:textColorLink="#C2410C"
        app:cornerRadius="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/update_report_mising_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/prompt_medium"
        android:gravity="center"
        android:text="ยืนยันสิ่งของสูญหาย"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="294dp"
        android:layout_height="144dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/prompt_medium"
        android:gravity="center"
        android:text="ข้าพเจ้าขอยืนยันว่าได้ตรวจสอบแล้วและพบว่า สิ่งของที่กล่าวถึงได้สูญหายจริง ไม่มีการพบเห็นหรือสามารถติดตามกลับมาได้ในขณะนี้ ข้าพเจ้าจะดำเนินการตามขั้นตอนที่เกี่ยวข้องเพื่อรายงานการสูญหายและติดตามหาสิ่งของเหล่านั้นต่อไป"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <RadioButton
        android:id="@+id/confirmMissing"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/prompt_medium"
        android:text="ข้าพเจ้ายอมรับว่าสิ่งของนั้นสูญหายจริง"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>