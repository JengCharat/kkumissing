<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- ตั้งค่าฟอนต์หลัก -->
        <item name="android:fontFamily">@font/prompt</item>
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
    </style>

    <!-- Style สำหรับ Toolbar -->
    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <!-- Style สำหรับ Title ใน Toolbar -->
    <style name="ToolbarTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/prompt</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:fontFamily">@font/prompt</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- กำหนดฟอนต์ให้กับ Bottom Navigation -->
    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>
    </style>

    <!-- Style ของข้อความที่ Active ใน Bottom Navigation -->
    <style name="BottomNavTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/prompt</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style ของข้อความที่ Inactive ใน Bottom Navigation -->
    <style name="BottomNavTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/prompt</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/common_google_signin_btn_text_dark</item>
    </style>

</resources>